{
    "name": "jamesread/sicroc",
	"description": "Build CRUD apps for MySQL without code.",
    "type": "project",
    "license": "AGPL-3.0-only",
    "require": {
        "jwread/lib-allure": "^8.1.25",
        "smarty/smarty": "^4.5",
        "composer/semver": "^3.4"
    },
    "authors": [
        {
            "name": "jamesread",
            "email": "contact@jwread.com"
        }
    ],
	"config": {
		"vendor-dir": "src/private/libraries/"
	},
	"autoload": {
		"psr-4": {
			"Sicroc\\": "src/private/app/"
		}
	},
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.21",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    }
}
